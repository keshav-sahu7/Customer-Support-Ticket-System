<Page x:Class="CSTS.Client.Pages.TicketDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSTS.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="TicketDetailsPage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Ticket Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Ticket Number:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Id}" Margin="0,0,0,10"/>
            <TextBlock Text="Subject:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Subject}" Margin="0,0,0,10"/>
            <TextBlock Text="Description:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <TextBlock Text="Priority:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Priority}" Margin="0,0,0,10"/>
            <TextBlock Text="Status:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Status}" Margin="0,0,0,10"/>
            <TextBlock Text="Created Date:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CreatedAt}" Margin="0,0,0,10"/>
            <TextBlock Text="Created By:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CreatedBy.Username}" Margin="0,0,0,10"/>
            <TextBlock Text="Assigned To:" FontWeight="Bold"/>
            <TextBlock Text="{Binding AssignedTo.Username}" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Admin Actions" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Assign To:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="AssignToComboBox" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Change Status:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="StatusComboBox" Width="150">
                    <ComboBoxItem Content="Open"/>
                    <ComboBoxItem Content="InProgress"/>
                    <ComboBoxItem Content="Closed"/>
                </ComboBox>
            </StackPanel>
            <Button Content="Save" Margin="0,10,0,0" Click="SaveButton_Click" Width="80" Height="30"/>

            <TextBlock Text="Comments" FontSize="20" FontWeight="Bold" Margin="0,20,0,10"/>
            <ListView x:Name="CommentsListView" Height="150">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="User" DisplayMemberBinding="{Binding CreatedByUsername}" Width="100"/>
                        <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding Content}" Width="300"/>
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding CreatedAtLocal}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock Text="Add Comment:" Margin="0,10,0,0"/>
            <TextBox x:Name="CommentTextBox" Height="50" TextWrapping="Wrap" AcceptsReturn="True"/>
            <Button Content="Add Comment" Margin="0,5,0,0" HorizontalAlignment="Right" Click="AddCommentButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
