<Page x:Class="CSTS.Client.Pages.CreateTicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSTS.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTicketPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Create Ticket" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Subject"/>
            <TextBox x:Name="SubjectTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Description"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" TextWrapping="Wrap" AcceptsReturn="True" Height="100"/>
            <TextBlock Text="Priority"/>
            <ComboBox x:Name="PriorityComboBox" Margin="0,0,0,20">
                <ComboBoxItem Content="Low"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="High"/>
            </ComboBox>
            <Button Content="Submit" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
