<Page x:Class="CSTS.Client.Pages.TicketListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSTS.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TicketListPage">

    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Refresh" Margin="5" Click="RefreshButton_Click"/>
                <Button Content="Create Ticket" Margin="5" Click="CreateTicketButton_Click"/>
            </StackPanel>
            <ListView x:Name="TicketsListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Ticket Number" DisplayMemberBinding="{Binding TicketNumber}"/>
                        <GridViewColumn Header="Subject" DisplayMemberBinding="{Binding Subject}"/>
                        <GridViewColumn Header="Priority" DisplayMemberBinding="{Binding Priority}"/>
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}"/>
                        <GridViewColumn Header="Created Date" DisplayMemberBinding="{Binding CreatedAt}"/>
                        <GridViewColumn Header="Assigned To" DisplayMemberBinding="{Binding AssignedTo.Username}"/>
                        <GridViewColumn Header="Actions">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="View Details" Click="ViewDetailsButton_Click"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Page>
