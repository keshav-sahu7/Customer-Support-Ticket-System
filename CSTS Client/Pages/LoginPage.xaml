<Page x:Class="CSTS.Client.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSTS.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
            <Button Content="Login" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
